{% extends 'layout.html.twig' %}


{% block title %} Boutique - gestion Membre {% endblock %}


{% block content %}

<h1 class="display-4 text-center">LISTE DES MEMBRES</h1><hr>

 <div class="row m-4">

        <a href="{{ path('inscription') }}" class="btn btn-primary">Ajouter un membre</a>

    </div> 

  <table class="table table-bordered">
         <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Username</th>
                <th>Civilite</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>CodePostal</th>
                <th>Email</th>
                <th>Password</th>
                <th>Achats</th>

                <th colspan="3">Action</th>
            </tr>
         </thead>
            <tbody>
                {% for m in membres %}
                <tr>
                    <td>{{ m.id }}</td>
                    <td>{{ m.nom }}</td>
                    <td>{{ m.prenom }}</td>
                    <td>{{ m.username}}</td>
                    <td>{{m.civilite}}</td>
                    <td>{{ m.adresse }}</td>
                    <td>{{ m.codepostal}}</td>
                    <td>{{ m.email }}</td>
                    <td>{{ m.password }}</td>
                    <td>{{ m.ville }}</td>
                    <td>{{ m.achats}}</td>
                    <td> nombre de commande :{{ m.commandes | length }}

                    <ul>
                    {{% for c in m.commandes %}
                    <li> montant : {{c.montant|number_format(2,',','')}}â‚¬</li>
                    {% endfor %}
                    </ul>
                    </td>
                    <td>{{ m.id }}</td>
                    <td><a href=" {{ path('admin_membre',{'id' : m.id } ) }}" target="_blank" class="text text-dark">
                    <i class="fas fa-eye"></i></a></td>

                    <td><a href=" {{ path('admin_membre_update',{'id': m.id } ) }}" class="text- text-warning"><i class="fas fa-edit"></i></a></td>

                    <td><a href="{{ path('admin_membre_delete', {'id' : m.id}) }}" onclick="return confirm('Etes-vous sur de vouloir supprimer le produit ?');" class="text text-danger"><i class="fas fa-trash"></i></a></td>

                </tr>
                {% endfor %}
            </tbody>
     </table>
     
       {{ dump(membre) }} 
       
    {% endblock %}